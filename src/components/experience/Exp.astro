---
import experience from './experience.json'
---

<>
  {experience.map(exp => (
    <section class="py-3 max-w-4xl">
      <h2 class="text-4xl font-bold ">
          {exp.company}
        </h2>
        <p class="font-light text-x">
          {exp["job-title"]} <br />
          {exp.from} â€“ {exp.to}
        </p>
        <ul class="list-disc list-inside pt-4 font-light text-lg">
          {exp.descriptions.map(d => (
            <li>{d}</li>
          ))}
          {!!exp.tech.length && <li class="font-bold">Tech used: {exp.tech.join(', ')}</li>}
        </ul>
    </section>
  ))}
</>